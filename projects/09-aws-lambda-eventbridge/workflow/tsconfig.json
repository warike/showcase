{
  "compilerOptions": {
    
    "module": "CommonJS",
    "target": "ES2022",

    "moduleResolution": "node",
    
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,

    "types": ["jest"]
  },
  "include": ["src/**/*.ts",  "__tests__/**/*.test.ts"],
  "exclude": ["node_modules"]
}